[
  {
    "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${service_name}:${image_tag}",
    "networkMode": "${task_network_mode}",
    "name": "${service_name}",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/${service_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": ${service_container_port}
      }
    ],
    "environment": [
      {
        "name": "API_DOMAIN",
        "value": "${env_api_domain}"
      },
      {
        "name": "COUNTRY_CODE",
        "value": "${env_country_code}"
      },
      {
        "name": "PARTY_ID",
        "value": "${env_party_id}"
      },
      {
        "name": "ISSUER",
        "value": "${env_issuer}"
      },
      {
        "name": "DB_USER",
        "value": "${env_db_user}"
      },
      {
        "name": "DB_PASS",
        "value": "${env_db_pass}"
      },
      {
        "name": "DB_HOST",
        "value": "${env_db_host}"
      },
      {
        "name": "DB_NAME",
        "value": "${env_db_name}"
      },
      {
        "name": "REST_PORT",
        "value": "${env_rest_port}"
      },
      {
        "name": "RPC_PORT",
        "value": "${env_rpc_port}"
      },
      {
        "name": "SHUTDOWN_TIMEOUT",
        "value": "${env_shutdown_timeout}"
      }
    ]
  }
]
